<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.projects.aliciamarie.folio.Capture"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:layout_margin="20dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/data_description"
                android:text="Description"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:autoText="false"
                android:inputType="textMultiLine" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:ems="10"
                android:id="@+id/data_latitude"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:text="Latitude" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:ems="10"
                android:id="@+id/data_longitude"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:text="Longitude" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|numberSigned"
                android:ems="10"
                android:id="@+id/data_accuracy"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:text="Accuracy" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/data_tags"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:text="Tags" />

            <TextClock
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data_time"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="30px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/data_imageview"
                    android:layout_weight="3"
                    android:background="@color/gray" />

                <Space
                    android:layout_width="400px"
                    android:layout_height="fill_parent" />

                <VideoView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/data_videoview"
                    android:layout_weight="3" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
