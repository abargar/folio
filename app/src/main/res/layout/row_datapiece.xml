<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:id="@+id/list_item_content_icon"/>

    <TextView
        android:id="@+id/list_item_content_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/list_item_content_icon"
        android:layout_toRightOf="@+id/list_item_content_icon"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/list_item_content_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/list_item_content_name"
        android:layout_alignTop="@+id/list_item_content_icon"
        android:layout_gravity="right"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/list_item_content_icon"
        android:layout_alignBottom="@+id/list_item_content_icon"
        android:layout_below="@+id/list_item_content_name"
        android:id="@+id/list_item_content_tags"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Tags"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_content_tags"
        android:layout_alignBottom="@+id/list_item_content_icon"
        android:layout_below="@+id/list_item_content_time"
        android:layout_gravity="right"
        android:id="@+id/list_item_content_type"
        android:text="Type"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>